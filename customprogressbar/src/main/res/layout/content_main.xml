<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:probtn="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.facebook.customprogressbar.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:titletext="37957295"
        custom:titletextcolor="#FF0000"
        custom:titletextsize="40sp"
        android:layout_gravity="center"/>
    <com.facebook.customprogressbar.view.ProgressButton
        android:id="@+id/mProBtn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        probtn:text="正在下载"
        probtn:max="100"
        probtn:textsize="25sp"
        probtn:radius="20dp"
        probtn:progress="50"
        probtn:textcolor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>
</LinearLayout>
